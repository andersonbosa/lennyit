{
  "manifest_version": 3,
  "name": "Lenny It",
  "description": "Use lenny-faces in every input just by !",
  "version": "1.0",
  "permissions": [
    "scripting",
    "activeTab"
  ],
  "background": {
    "service_worker": "./public/js/background.js"
  },
  "action": {
    "default_title": "Lenny It",
    "default_popup": "public/pages/popup.html",
    "default_icon": {
      "16": "public/images/favicon.png",
      "32": "public/images/favicon.png",
      "48": "public/images/favicon.png",
      "128": "public/images/favicon.png"
    }
  },
  "icons": {
    "16": "public/images/favicon.png",
    "32": "public/images/favicon.png",
    "48": "public/images/favicon.png",
    "128": "public/images/favicon.png"
  }
}